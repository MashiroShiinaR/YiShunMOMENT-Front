page {
  background-color: whitesmoke;
}

.login-img {
  width: 750rpx;
}

/*表单内容*/

.inputView {
  background-color: white;
  line-height: 45px;
}

/*输入框*/

.nameImage, .keyImage {
  margin-left: 22px;
  width: 20px;
  height: 20px;
}

.loginLabel {
  margin: 15px 15px 15px 25px;
  color: gray;
  font-size: 15px;
}

input {
  width: 220px;
}

.inputText {
  float: right;
  text-align: left;
  margin-right: 75px;
  margin-top: 11px;
  font-size: 15px;
}

.line {
  width: 100%;
  height: 1px;
  background-color: gainsboro;
  margin-top: 1px;
}

/*按钮*/

.loginBtn {
  width: 80%;
  margin-top: 25px;
}

.goRegistBtn {
  width: 80%;
  margin-top: 15px;
}

.c-minheight {
  min-height: 80px;
}

.buttonView {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
}

.button {
  padding-top: 8px;
  padding-bottom: 8px;
  border-width: 1px;
  border-style: solid;
  border-radius: 30px;
  text-align: center;
  color: rgb(0, 133, 255);
  border-color: rgb(0, 133, 255);
  font-size: 16px;
  width: 60%;
  margin-bottom: 12px;
}

button[type=primary] {
  color: rgb(0, 133, 255);
  border-color: rgb(0, 133, 255);
  background: rgba(255, 255, 255, 0.9);
}

